pipeline {
    agent any

    stages {
        stage('Clonar reositorio') {
            steps {
                git branch: 'main', url: 'https://github.com/gnasxd/teste-ebac-ui.git'
                
            }
        }
        stage('Instalar dependencias') {
            steps {
                bat 'npm install'
            }
        }
        stage('Executar testes') {
            steps{
                bat 'set NO_COLOR=1'
'npm test'
'npm cy:run'
            }
        }
    }
}