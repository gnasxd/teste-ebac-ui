pipeline {
    agent any

    stages {
        stage('Clonar repositório') {
            steps {
                git branch: 'main', url: 'https://github.com/gnasxd/teste-ebac-ui.git'
            }
        }
        stage('Instalar dependências') {
            steps {
                bat 'npm install'
            }
        }
         stage('execuntando servidor') { 
  steps( 
    bat 'start /b npm start'
      ) 
  }

        
        stage('Executar testes') {
            steps {
                bat '''
                    set NO_COLOR=1
                    npm test
                    npm cy:run
                '''
            }
        }
    }
}